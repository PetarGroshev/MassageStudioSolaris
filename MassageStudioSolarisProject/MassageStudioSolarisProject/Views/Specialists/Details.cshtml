@model MassageStudioSolarisProject.Data.Specialist

@{
    ViewData["Title"] = "Details";
}
<style>
    body {
        background-color:turquoise;
    }

    .detailedBtn a {
        background-color: #7373E3;
        border-color: #2A2AD1;
    }

    .detailedBtn a:hover {
            background-color: #4D4DDB;
            border-color: #2A2AD1;
    }
</style>

<h1>Данни за специалиста</h1>
<div class="background">
  
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Име:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            Фамилия:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        @if (User.IsInRole("Admin"))
        {
            <dt class="col-sm-2">
                Дата на промяна на данните:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateModified)
            </dd>
        }
 
    </dl>
</div>
@if (User.IsInRole("Admin"))
{
    <div class="detailedBtn">
        <a class="btn btn-primary" id="edit" asp-action="Edit" asp-route-id="@Model?.Id">Редакция на данни</a>
        <a class="btn btn-primary" id="back" asp-action="Index">Назад</a>
    </div>
}

