@model IEnumerable<MassageStudioSolarisProject.Data.Specialist>

@{
    ViewData["Title"] = "Index";
}

<center><h1>Масажисти в нашето студио </h1></center>
@if (User.IsInRole("Admin"))
{
    <center> <a class="btn btn-primary" asp-action="Create">Добави масажист</a></center>
}
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th         >
                Име на масажиста:
            </th>
            <th>
                Фамилия на масажиста:
            </th>
            @if (User.IsInRole("Admin"))
            {
                <th>
                    Дата на промяна:
                </th>
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.DateModified)
                    </td>
                }
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Редактирай</a>
                        <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Детайли</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Изтрий</a>
                    </td>
                }

            </tr>
        }
    </tbody>
</table>
